@model IEnumerable<Mango.Web.Models.DTOs.ProductDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">
                Product List
            </h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>
                Create new Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th> Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-success">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                           <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>